							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/logout-all",
							"host": ["{{base_url}}"],
							"path": ["api", "logout-all"]
						},
						"description": "Revoke all API tokens for the authenticated user"
					},
					"response": []
				}
