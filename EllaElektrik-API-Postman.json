								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/logout",
							"host": ["{{base_url}}"],
							"path": ["api", "logout"]
						},
						"description": "Logout and revoke current API token"
					},
					"response": []
				},
				{
					"name": "Logout All Devices",
